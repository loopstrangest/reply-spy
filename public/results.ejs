<!DOCTYPE html>
<html lang='en'>
  <head>
    <script src="https://unpkg.com/konva@8.3.0/konva.min.js"></script>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="css/resultsStyles.css">
    <title>Reply Spy</title>
  </head>
  <body>
    <p class="loadingBox"></p>
 
    <div id='displayContainer'>
      <div id="konvaContainer"></div>
      <div id="inputContainer">
        <input type="range" min="1"
        max=<%-String(results[2])%>
        value=<%-String(results[2])%> id='input'>
        <div id="stairsContainer">
          <label for="stairsInput">Stairs:&nbsp;</label>
          <input type="color" label='stairsInput' value='#BBEAFF' id='stairsInput'>
        </div>
        <div id="bgContainer">
          <label for="bgInput">Background:&nbsp;</label>
          <input type="color" label = 'Background:' value='#1DA1F2' id='bgInput'>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      var twitterData = <%- JSON.stringify(results) %>
    </script>
    <script type="text/javascript" src="js/stage.js"></script>
  </body>
</html>
